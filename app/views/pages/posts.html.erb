
<div class="container1" style="margin-top:10%;">
<center><h1>Posts</h1>
</center>

<%= form_tag("/insert", method:"post") do %>
  <div class="form-group">
    <label for="exampleInputUser">User Name</label>
    <%= text_field_tag(:username)%>
  </div>
  <div class="form-group">
    <label for="exampleInputPass">Comment</label>
    <p class="emoji-picker-container">
    <%= text_field_tag(:title,"", {:class=>'form-control', :data=>{ emojiable: true }}) %>
  </p>
  </div>

<center>
  <%= submit_tag("Submit",:class=>"btn btn-success") %>
</center>
<% end %>
</div
